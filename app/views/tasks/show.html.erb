<h1><%=@task.title%></h1>
<p><%= @task.details%></p>

<% if @task.completed%>
  <%= form_with model: @task do |f| %>
    <%= f.label :completed, "This task is completed" %>
    <%= f.check_box :completed %>
  <% end %>
<% else %>
<%= form_with model: @task do |f| %>
    <%= f.label :completed, "This task is not completed" %>
    <%= f.check_box :completed %>
  <% end %>
<% end %>


<%= link_to "Edit Task", edit_task_path(@task) %>

<%= link_to "Delete Task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<%= link_to "Back to all tasks", tasks_path %>
